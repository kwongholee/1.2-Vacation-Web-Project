    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.6.0/socket.io.js" integrity="sha512-rwu37NnL8piEGiFhe2c5j4GahN+gFsIn9k/0hkRY44iz0pc81tBNaUN56qF8X4fy+5pgAAgYi2C9FXdetne5sQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    
    <%- include('nav.html') %>

    <h4 class="ml-2 my-3 text-center">Chat Room</h4>

    <input id="input1">
    <button id="send">message</button>
    <button id="room1">Chatroom1</button>
    <button id="room1-send">room1 message</button>

    <div id="content">

    </div>

    <script>
      var socket = io(); //WebSocket 접속
      $('#room1').click(function() {
        socket.emit('join room', 'get in to room1');
      })

      $('#room1-send').click(function() {
        socket.emit('room1-send', $('#input1').val());
      })

      $('#send').click(function() {
        socket.emit('user-send', $('#input1').val()); //서버에게 웹소켓으로 실시간 메세지 보냄(작명, 메세지)
      });

      socket.on('broadcast', function(data) {
        $('#content').append('<div>' + data + '<div>');
      });
    </script> 

